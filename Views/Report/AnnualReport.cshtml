@model IEnumerable<mWallet.Models.ReportModel>

@{
    ViewBag.Title = "AnnualReport";
}

<style>
    select {
        color: white;
        height: 34px;
        background-color: #337ab7;
        border-color: #2e6da4;
        margin-bottom: 5px;
        border-radius: 4px;
        text-align: center;
        width: 80px;
    }
</style>

<h2>AnnualReport</h2>

<select class="form-select" name="year" id="year">
    @foreach (var item in ViewBag.ddlYear)
    {
        if (ViewBag.curYear == item.Text)
        {
            <option selected value="@item.Text">@item.Text</option>
        }
        else
        {
            <option value="@item.Text">@item.Text</option>
        }
    }
</select>

<table class="table">
    <tr>
        <th colspan="3">Annual Report for the year @ViewBag.curYear</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th colspan="3">@item.month</th>
        </tr>
        <tr>
            <td></td>
            <td>@item.amount</td>
            <td></td>
        </tr>
    }

</table>

<script>
    $(document).ready(function () {
        $("#year").change(function () {
            var _year = $("#year").val();
            window.location.href = "/Report/AnnualReport/?year=" + _year;
        });
    });
</script>